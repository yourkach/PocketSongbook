<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#8942EF</item>
        <item name="colorPrimaryDark">#533D85</item>
        <item name="colorAccent">#F139F8</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

</resources>
