<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/searchToolbarStub"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/searchOpenFavouritesIv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/circle_ripple_background"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="@+id/searchToolbarStub"
        app:layout_constraintStart_toStartOf="@+id/searchToolbarStub"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_star_border_white_24dp" />


    <FrameLayout
        android:id="@+id/catalogSearchCl"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/searchToolbarStub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/searchOpenFavouritesIv"
        app:layout_constraintTop_toTopOf="@id/searchToolbarStub">

        <SearchView
            android:id="@+id/searchViewMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:closeIcon="@drawable/ic_close_24"
            android:fadingEdge="horizontal"
            android:goIcon="@drawable/ic_right_arrow_24"
            android:layoutDirection="rtl"
            android:queryBackground="@drawable/bg_rounded_white"
            android:queryHint="@string/search_hint"
            android:searchIcon="@drawable/ic_search_24_white" />
    </FrameLayout>

    <!--        android:layoutDirection="rtl"-->


    <Spinner
        android:id="@+id/searchWebsiteSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchToolbarStub"
        tools:listitem="@layout/spinner_item" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchWebsiteSelector" />

    <TextView
        android:id="@+id/searchNothingFoundLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nothing_found"
        android:textSize="22sp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/searchRv"
        app:layout_constraintLeft_toLeftOf="@id/searchRv"
        app:layout_constraintRight_toRightOf="@id/searchRv"
        app:layout_constraintTop_toTopOf="@id/searchRv" />

    <ProgressBar
        android:id="@+id/searchLoadingPanel"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/circular_progress_bar"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/searchRv"
        app:layout_constraintEnd_toEndOf="@id/searchRv"
        app:layout_constraintStart_toStartOf="@id/searchRv"
        app:layout_constraintTop_toTopOf="@id/searchRv" />
</androidx.constraintlayout.widget.ConstraintLayout>